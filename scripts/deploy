# #!/bin/bash

# Colors
DEFAULT='\033[0m'
RED='\033[00;31m'
GREEN='\033[00;32m'

# echo "${RED}Baixando dependÃªncias"
# npm i

echo "Gerando o projeto"
npm run build

echo "${RED}Fazendo o deploy${DEFAULT}"
rm -rf .deploy
mkdir .deploy
cp src/CNAME .deploy
cp -R build/* .deploy
cd .deploy
git init
git add --all
git commit -m "Update site via deploy.sh"
git remote add origin git@github.com:abc-dev/2016.git
git fetch origin
git checkout gh-pages
git merge master
git push origin gh-pages
